<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.model">

    <class name="SalesInvoice" table="sales_invoice">
        <id name="invoiceNumber" column="invoiceNumber">
            
        </id>
      
         <property name="invoiceDate" type="string" column="invoiceDate"/>
        <property name="salesOrderId" type="string" column="salesOrderId"/>
        <property name="preparedBy" type="string" column="preparedBy"/>
       	<property name="remarks" type="string" column="remarks"/>
       
    </class>

</hibernate-mapping>