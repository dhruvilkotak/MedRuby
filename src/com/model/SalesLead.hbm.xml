<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.model">

    <class name="SalesLead" table="sales_lead">
        <id name="leadNumber" column="leadNumber">
           
        </id>
        <property name="leadName" type="string" column="leadName"/>
        <property name="leadDate" type="string" column="leadDate"/>
       	<property name="customerId" type="string" column="customerId"/>
       	
       	<property name="leadRequirement" type="string" column="leadRequirement"/>
       	<property name="leadSource" type="string" column="leadSource"/>
       	<property name="estimatedValue" type="string" column="estimatedValue"/>
       	<property name="nextFollowUpDate" type="string" column="nextFollowUpDate"/>
       	<property name="generatedBy" type="string" column="generatedBy"/>
       	<property name="sector" type="string" column="sector"/>
        <property name="preparedBy" type="string" column="preparedBy"/>
       	<property name="remarks" type="string" column="remarks"/>
    </class>

</hibernate-mapping>